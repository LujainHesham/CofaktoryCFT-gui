<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cofaktory.footprint.controllers.CeoDashboardController">
    <ScrollPane fitToWidth="true" fitToHeight="true" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <VBox spacing="36" style="-fx-padding: 18;">
            <Label text="CEO Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Button text="Log Out"
                    fx:id="logoutButton"
                    style="-fx-background-color: #ff5555; -fx-text-fill: white; -fx-font-weight: bold;"
                    prefWidth="100"
                    onAction="#handleLogout"/>
            <Separator/>

            <!-- Company Emissions Overview -->
            <Label text="Company Emissions Overview" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <HBox spacing="18" minHeight="440" alignment="TOP_CENTER">
                <VBox spacing="12" alignment="TOP_CENTER" minWidth="380">
                    <Label text="Total Emissions Over Time"/>
                    <LineChart fx:id="emissionsOverTimeChart" prefWidth="420" prefHeight="320">
                        <xAxis>
                            <CategoryAxis label="Month/Year"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Emissions (kg CO₂)"/>
                        </yAxis>
                    </LineChart>
                    <Label fx:id="emissionsOverTimeDesc" wrapText="true" style="-fx-font-size: 12px;"/>
                </VBox>
                <VBox spacing="12" alignment="TOP_CENTER" minWidth="380">
                    <Label text="Emissions by City"/>
                    <BarChart fx:id="emissionsByCityChart" prefWidth="420" prefHeight="320">
                        <xAxis>
                            <CategoryAxis label="City"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Emissions (kg CO₂)"/>
                        </yAxis>
                    </BarChart>
                    <Label fx:id="emissionsByCityDesc" wrapText="true" style="-fx-font-size: 12px;"/>
                </VBox>
                <VBox spacing="12" alignment="TOP_CENTER" minWidth="380">
                    <Label text="Emissions by Process"/>
                    <PieChart fx:id="emissionsByProcessChart" prefWidth="420" prefHeight="320"/>
                    <Label fx:id="emissionsByProcessDesc" wrapText="true" style="-fx-font-size: 12px;"/>
                </VBox>
            </HBox>
            <Separator/>

            <!-- Reduction Plans &amp; Impact -->
            <Label text="Reduction Plans &amp; Impact" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <HBox spacing="18" minHeight="440" alignment="TOP_CENTER">
                <VBox spacing="12" alignment="TOP_CENTER" minWidth="380">
                    <Label text="Reduction Plans Status"/>
                    <PieChart fx:id="reductionPlansStatusChart" prefWidth="420" prefHeight="320"/>
                    <Label fx:id="reductionPlansStatusDesc" wrapText="true" style="-fx-font-size: 12px;"/>
                </VBox>
                <VBox spacing="12" alignment="TOP_CENTER" minWidth="380">
                    <Label text="Projected Annual Profits from Reductions"/>
                    <BarChart fx:id="projectedProfitsChart" prefWidth="420" prefHeight="320">
                        <xAxis>
                            <CategoryAxis label="City"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Projected Profits"/>
                        </yAxis>
                    </BarChart>
                    <Label fx:id="projectedProfitsDesc" wrapText="true" style="-fx-font-size: 12px;"/>
                </VBox>
                <VBox spacing="12" alignment="TOP_CENTER" minWidth="380">
                    <Label text="Implementation Costs of Reductions"/>
                    <BarChart fx:id="implementationCostsChart" prefWidth="420" prefHeight="320">
                        <xAxis>
                            <CategoryAxis label="City"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Implementation Costs"/>
                        </yAxis>
                    </BarChart>
                    <Label fx:id="implementationCostsDesc" wrapText="true" style="-fx-font-size: 12px;"/>
                </VBox>
            </HBox>
            <Separator/>

            <!-- Operations &amp; Performance -->
            <Label text="Operations &amp; Performance" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <HBox spacing="18" minHeight="440" alignment="TOP_CENTER">
                <VBox spacing="12" alignment="TOP_CENTER" minWidth="380">
                    <Label text="Emissions per Branch"/>
                    <BarChart fx:id="emissionsPerBranchChart" prefWidth="420" prefHeight="320">
                        <xAxis>
                            <CategoryAxis label="Branch"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Emissions (kg CO₂)"/>
                        </yAxis>
                    </BarChart>
                    <Label fx:id="emissionsPerBranchDesc" wrapText="true" style="-fx-font-size: 12px;"/>
                </VBox>
                <VBox spacing="12" alignment="TOP_CENTER" minWidth="380">
                    <Label text="Emissions per Employee"/>
                    <BarChart fx:id="emissionsPerEmployeeChart" prefWidth="420" prefHeight="320">
                        <xAxis>
                            <CategoryAxis label="Branch"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Emissions per Employee"/>
                        </yAxis>
                    </BarChart>
                    <Label fx:id="emissionsPerEmployeeDesc" wrapText="true" style="-fx-font-size: 12px;"/>
                </VBox>
                <VBox spacing="12" alignment="TOP_CENTER" minWidth="380">
                    <Label text="Top 5 Worst Branches"/>
                    <BarChart fx:id="topWorstBranchesChart" prefWidth="420" prefHeight="320">
                        <xAxis>
                            <CategoryAxis label="Branch"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Total Emissions (kg CO₂)"/>
                        </yAxis>
                    </BarChart>
                    <Label fx:id="topWorstBranchesDesc" wrapText="true" style="-fx-font-size: 12px;"/>
                </VBox>
                <VBox spacing="12" alignment="TOP_CENTER" minWidth="380">
                    <Label text="Top 5 Best Branches"/>
                    <BarChart fx:id="topBestBranchesChart" prefWidth="420" prefHeight="320">
                        <xAxis>
                            <CategoryAxis label="Branch"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Total Emissions (kg CO₂)"/>
                        </yAxis>
                    </BarChart>
                    <Label fx:id="topBestBranchesDesc" wrapText="true" style="-fx-font-size: 12px;"/>
                </VBox>
            </HBox>
        </VBox>
    </ScrollPane>
</AnchorPane>