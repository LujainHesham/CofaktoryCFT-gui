<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<StackPane fx:id="rootPane" styleClass="main-background" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cofaktory.footprint.controllers.AuthController">
   <children>
      <!-- Background container that fills the entire space -->
      <StackPane prefHeight="Infinity" prefWidth="Infinity" styleClass="main-background" />

      <!-- Login container -->
      <VBox alignment="CENTER" maxHeight="550" maxWidth="450" prefHeight="447.0" prefWidth="450.0" styleClass="login-container" StackPane.alignment="CENTER">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="85.0" prefWidth="368.0">
               <children>
                  <Label styleClass="glass-heading" text="Welcome Back!">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="Sign in to access your dashboard" />
               </children>
            </VBox>
            <VBox layoutX="51.0" layoutY="263.0" prefHeight="61.0" prefWidth="368.0">
               <children>
                  <Label fx:id="emailLabel" prefHeight="64.0" prefWidth="37.0" styleClass="glass-label" text="Email" />
                  <TextField fx:id="emailField" prefHeight="39.0" prefWidth="299.0" promptText="Enter your email" styleClass="glass-text-field" />
               </children>
            </VBox>
            <VBox prefHeight="61.0" prefWidth="368.0">
               <children>
                  <Label fx:id="passwordLabel" prefHeight="86.0" prefWidth="63.0" styleClass="glass-label" text="Password" />
                  <HBox alignment="CENTER_LEFT" spacing="5">
                     <children>
                        <PasswordField fx:id="passwordField" prefHeight="39.0" prefWidth="282.0" promptText="Enter your password" styleClass="glass-password-field" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="passwordFieldVisible" prefHeight="39.0" prefWidth="282.0" promptText="Enter your password" styleClass="glass-text-field" managed="false" visible="false" HBox.hgrow="ALWAYS" />
                        <Button fx:id="togglePasswordButton" onAction="#togglePasswordVisibility" styleClass="glass-toggle-button" minWidth="40">
                           <graphic>
                              <FontAwesomeIconView fx:id="passwordVisibilityIcon" glyphName="EYE_SLASH" size="12" fill="#2c1e0f"/>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Button fx:id="loginButton" defaultButton="true" onAction="#handleLogin" prefHeight="45.0" prefWidth="394.0" styleClass="login-button" text="Login">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Button>
            <HBox alignment="CENTER_RIGHT">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
               <children>
                  <ToggleButton fx:id="languageToggle" onAction="#toggleLanguage" styleClass="glass-toggle-button" text="عربي" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>