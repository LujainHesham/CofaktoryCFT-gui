<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cofaktory.footprint.controllers.CioDashboardController">
    <VBox layoutX="14.0" layoutY="-104.0" prefHeight="588.0" prefWidth="958.0" spacing="10" style="-fx-padding: 18;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="CIO Dashboard" />
        <Button fx:id="logoutButton" onAction="#handleLogout" prefWidth="100" style="-fx-background-color: #ff5555; -fx-text-fill: white; -fx-font-weight: bold;" text="Log Out" />
        <TabPane prefHeight="538.0" prefWidth="936.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <!-- Overview Tab -->
                <Tab text="Overview">
                    <TabPane tabClosingPolicy="UNAVAILABLE">
                        <tabs>
                            <Tab text="Cairo">
                                <VBox prefHeight="463.0" prefWidth="936.0" spacing="8">
                                    <TableView fx:id="cairoTable" prefHeight="432.0" prefWidth="922.0">
                                        <columns>
                                            <TableColumn fx:id="cairoBranchIdCol" text="Branch ID" />
                                            <TableColumn fx:id="cairoProductionCol" text="Production Emissions" />
                                            <TableColumn fx:id="cairoPackagingCol" text="Packaging Emissions" />
                                            <TableColumn fx:id="cairoDistributionCol" text="Distribution Emissions" />
                                            <TableColumn fx:id="cairoTotalCol" text="Total Carbon Footprint" />
                                        </columns>
                              <columnResizePolicy>
                                 <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                              </columnResizePolicy>
                                    </TableView>
                                    <HBox spacing="10">
                                        <Label fx:id="cairoTotalLabel" text="Total: " />
                                        <Button fx:id="cairoPdfButton" onAction="#handleGenerateCairoEmissionsPdf" text="Generate Cairo PDF Report" />
                                        <Label fx:id="cairoPdfStatusLabel" text="" />
                                    </HBox>
                                </VBox>
                            </Tab>
                            <Tab text="Alexandria">
                                <VBox spacing="8">
                                    <TableView fx:id="alexTable" prefHeight="476.0" prefWidth="922.0">
                                        <columns>
                                            <TableColumn fx:id="alexBranchIdCol" prefWidth="109.0" text="Branch ID" />
                                            <TableColumn fx:id="alexProductionCol" minWidth="5.0" prefWidth="230.0" text="Production Emissions" />
                                            <TableColumn fx:id="alexPackagingCol" minWidth="2.0" prefWidth="152.0" text="Packaging Emissions" />
                                            <TableColumn fx:id="alexDistributionCol" prefWidth="208.0" text="Distribution Emissions" />
                                            <TableColumn fx:id="alexTotalCol" prefWidth="222.0" text="Total Carbon Footprint" />
                                        </columns>
                              <columnResizePolicy>
                                 <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                              </columnResizePolicy>
                                    </TableView>
                                    <HBox spacing="10">
                                        <Label fx:id="alexTotalLabel" text="Total: " />
                                        <Button fx:id="alexPdfButton" onAction="#handleGenerateAlexEmissionsPdf" text="Generate Alexandria PDF Report" />
                                        <Label fx:id="alexPdfStatusLabel" text="" />
                                    </HBox>
                                </VBox>
                            </Tab>
                            <Tab text="Giza">
                                <VBox spacing="8">
                                    <TableView fx:id="gizaTable" prefHeight="439.0" prefWidth="922.0">
                                        <columns>
                                            <TableColumn fx:id="gizaBranchIdCol" text="Branch ID" />
                                            <TableColumn fx:id="gizaProductionCol" text="Production Emissions" />
                                            <TableColumn fx:id="gizaPackagingCol" text="Packaging Emissions" />
                                            <TableColumn fx:id="gizaDistributionCol" text="Distribution Emissions" />
                                            <TableColumn fx:id="gizaTotalCol" text="Total Carbon Footprint" />
                                        </columns>
                              <columnResizePolicy>
                                 <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                              </columnResizePolicy>
                                    </TableView>
                                    <HBox spacing="10">
                                        <Label fx:id="gizaTotalLabel" text="Total: " />
                                        <Button fx:id="gizaPdfButton" onAction="#handleGenerateGizaEmissionsPdf" text="Generate Giza PDF Report" />
                                        <Label fx:id="gizaPdfStatusLabel" text="" />
                                    </HBox>
                                </VBox>
                            </Tab>
                            <Tab text="Aswan">
                                <VBox spacing="8">
                                    <TableView fx:id="aswanTable" prefHeight="470.0" prefWidth="922.0">
                                        <columns>
                                            <TableColumn fx:id="aswanBranchIdCol" prefWidth="102.0" text="Branch ID" />
                                            <TableColumn fx:id="aswanProductionCol" prefWidth="159.0" text="Production Emissions" />
                                            <TableColumn fx:id="aswanPackagingCol" prefWidth="210.0" text="Packaging Emissions" />
                                            <TableColumn fx:id="aswanDistributionCol" minWidth="0.0" prefWidth="207.0" text="Distribution Emissions" />
                                            <TableColumn fx:id="aswanTotalCol" prefWidth="243.0" text="Total Carbon Footprint" />
                                        </columns>
                              <columnResizePolicy>
                                 <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                              </columnResizePolicy>
                                    </TableView>
                                    <HBox spacing="10">
                                        <Label fx:id="aswanTotalLabel" text="Total: " />
                                        <Button fx:id="aswanPdfButton" onAction="#handleGenerateAswanEmissionsPdf" text="Generate Aswan PDF Report" />
                                        <Label fx:id="aswanPdfStatusLabel" text="" />
                                    </HBox>
                                </VBox>
                            </Tab>
                        </tabs>
                    </TabPane>
                </Tab>
                <!-- Reduction Plans Tab -->
                <Tab text="Reduction Plans">
                    <VBox prefHeight="490.0" prefWidth="922.0" spacing="8">
                        <TableView fx:id="reductionPlansTable" prefHeight="550.0" prefWidth="922.0">
                            <columns>
                                <TableColumn fx:id="rsIdColumn" text="ID" />
                                <TableColumn fx:id="rsBranchIdColumn" text="Branch ID" />
                                <TableColumn fx:id="rsUserIdColumn" text="User ID" />
                                <TableColumn fx:id="rsStrategyColumn" text="Strategy" />
                                <TableColumn fx:id="rsCostsColumn" text="Costs" />
                                <TableColumn fx:id="rsProfitsColumn" text="Profits" />
                                <TableColumn fx:id="rsStatusColumn" text="Status" />
                            </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                        </TableView>
                        <HBox spacing="8">
                            <Button onAction="#handleSaveReductionPlanStatus" text="Save Status Change" />
                            <Button fx:id="reductionPlanPdfButton" onAction="#handleGenerateReductionPlansPdf" text="Generate Selected Plan PDF" />
                        </HBox>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </VBox>
</AnchorPane>
